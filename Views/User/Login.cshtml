@model Payroll.Models.Views.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    var error = ViewData["ErrorMessage"];
    Layout = null;
}


<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Log In</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="~/css/style.css" rel="stylesheet">

</head>
<body class="text-center">
    <div id="signup-wrapper">
        <form id="signup-login-form" asp-action="Login" asp-controller="User" asp-anti-forgery="true" method="post">
            <h1>Авторизація</h1>

            <input asp-for="Username" type="text" id="username-input" class="form-control" placeholder="Ім'я користувача">
            <input asp-for="Password" type="password" id="password-input" class="form-control" placeholder="Пароль">

            <button class="btn btn-primary btn-block" type="submit">Увійти</button>

            <div id="or-option-block">
                @Html.ActionLink("Реєстрація", "Signup", "User", null, new { @class = "btn btn-success btn-block" })
            </div>
            <div class="auth-error-block">
                @error
            </div>

        </form>
    </div>
</body>
</html>
