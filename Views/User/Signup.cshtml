@model Payroll.Models.Views.SignupViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var error = ViewData["ErrorMessage"];
    Layout = null;
}


<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Sign Up</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="~/css/style.css" rel="stylesheet">

</head>
<body class="text-center">
    <div id="signup-wrapper">
        <form id="signup-login-form" asp-action="Signup" asp-controller="User" asp-anti-forgery="true" method="post">
            <h1>Реєстрація</h1>

            <input asp-for="Username" type="text" id="username-input" class="form-control" placeholder="Ім'я користувача">
            <input asp-for="Password" type="password" id="password-input" class="form-control" placeholder="Пароль">
            <input asp-for="RepeatedPassword" type="password" id="repeat-password-input" class="form-control" placeholder="Пароль повторно">

            <input asp-for="AuthorizeAfter" type="checkbox" id="login-after-checkbox" checked> Увійти після реєстрації

            <button class="btn btn-primary btn-block" type="submit">Зареєструватися</button>

            <div id="or-option-block">
                @Html.ActionLink("Авторизація", "Login", "User", null, new { @class = "btn btn-success btn-block" })
            </div>
            <div class="auth-error-block">
                <span>@error</span>
            </div>

        </form>
    </div>
</body>
</html>
